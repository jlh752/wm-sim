{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "outDir": "dist",
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "typeRoots": ["./dist/index.d.ts", "node_modules/@types"],
  },
  "include": ["src/**/*", "demo/**/*", "test/**/*"],
  "exclude": ["node_modules", "dist"]
}